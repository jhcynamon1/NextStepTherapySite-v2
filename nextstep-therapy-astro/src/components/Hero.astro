---
// Professional therapy practice hero component
interface Props {
	title: string;
	subtitle: string;
	primaryCta?: string;
	primaryCtaUrl?: string;
	secondaryCta?: string;
	secondaryCtaUrl?: string;
	background?: string;
}

const {
	title,
	subtitle,
	primaryCta = "Book Consultation",
	primaryCtaUrl = "tel:416-306-2157",
	secondaryCta = "View Services",
	secondaryCtaUrl = "/services",
	background = "gradient"
} = Astro.props;
---

<section class={`hero hero-${background}`}>
	<div class="container">
		<div class="hero-content">
			<h1 class="hero-title">{title}</h1>
			<p class="hero-subtitle">{subtitle}</p>
			<div class="hero-cta-group">
				<a href={primaryCtaUrl} class="btn btn-primary btn-large">
					{primaryCta}
				</a>
				{secondaryCta && (
					<a href={secondaryCtaUrl} class="btn btn-secondary btn-large">
						{secondaryCta}
					</a>
				)}
			</div>
		</div>
	</div>
</section>

<style>
	/* Professional Hero Styles */
	.hero {
		color: white;
		padding: 6rem 0;
		text-align: center;
		position: relative;
	}

	.hero-gradient {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.hero-blue {
		background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
	}

	.hero-teal {
		background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
		line-height: 1.6;
	}

	.hero-cta-group {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-block;
		padding: 12px 24px;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.2s;
		border: 2px solid transparent;
		cursor: pointer;
	}

	.btn-primary {
		background: #2563eb;
		color: white;
		border-color: #2563eb;
	}

	.btn-primary:hover {
		background: #1d4ed8;
		border-color: #1d4ed8;
		transform: translateY(-1px);
	}

	.btn-secondary {
		background: transparent;
		color: white;
		border-color: white;
	}

	.btn-secondary:hover {
		background: white;
		color: #2563eb;
		transform: translateY(-1px);
	}

	.btn-large {
		padding: 16px 32px;
		font-size: 1.1rem;
	}

	/* Mobile Optimization */
	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0;
		}

		.hero-title {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-cta-group {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 280px;
		}
	}
</style>