---
// Professional therapy practice header component
---

<header class="header">
	<div class="container">
		<div class="header-content">
			<div class="logo-section">
				<h1 class="logo-text">Next Step Therapy</h1>
				<span class="credentials-badge">CRPO #10979</span>
			</div>
			<nav class="nav">
				<a href="/services" class="nav-link">Services</a>
				<a href="/about" class="nav-link">About</a>
				<a href="/contact" class="nav-link">Contact</a>
				<a href="tel:416-306-2157" class="btn btn-primary">Book Now</a>
			</nav>
		</div>
	</div>
</header>

<style>
	/* Professional Header Styles */
	.header {
		background: #fff;
		border-bottom: 1px solid #e5e5e5;
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo-section {
		display: flex;
		align-items: center;
		gap: 12px;
	}

	.logo-text {
		font-size: 1.5rem;
		font-weight: 600;
		color: #2563eb;
		margin: 0;
	}

	.credentials-badge {
		background: #2563eb;
		color: white;
		padding: 4px 8px;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.nav {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.nav-link {
		text-decoration: none;
		color: #64748b;
		font-weight: 500;
		transition: color 0.2s;
	}

	.nav-link:hover {
		color: #2563eb;
	}

	.btn {
		display: inline-block;
		padding: 12px 24px;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.2s;
		border: 2px solid transparent;
		cursor: pointer;
	}

	.btn-primary {
		background: #2563eb;
		color: white;
		border-color: #2563eb;
	}

	.btn-primary:hover {
		background: #1d4ed8;
		border-color: #1d4ed8;
		transform: translateY(-1px);
	}

	/* Mobile Optimization */
	@media (max-width: 768px) {
		.header-content {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.nav {
			flex-direction: column;
			gap: 1rem;
		}

		.btn {
			width: 100%;
			max-width: 200px;
		}
	}
</style>