#!/bin/bash

# SEO Page Creation Command
# Usage: ./seopage "service" "city" "focus"

cat << 'EOF'
🚀 SEO PAGE CREATION SYSTEM
━━━━━━━━━━━━━━━━━━━━━━━━━━━

This command triggers the automated page creation process.
Claude will read the MANUS_PAGE_CREATION_PRD_COMPLETE.md and create your page.

USAGE:
  ./seopage "service" "city" "focus audience"

EXAMPLE:
  ./seopage "anxiety therapy" "Burlington" "working professionals"

EOF

if [ $# -lt 3 ]; then
    echo "❌ Error: Please provide all three arguments"
    echo ""
    echo "Usage: ./seopage \"service\" \"city\" \"focus\""
    echo "Example: ./seopage \"anxiety therapy\" \"Burlington\" \"working professionals\""
    exit 1
